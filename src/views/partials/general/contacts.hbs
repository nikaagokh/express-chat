<div class="contacts-wrapper contacts-scroll">
    <div class="contacts-header">
        <div class="input-wrapper" id="contactsInputWrapper">
            <input type="text" id="contactsInput" class="input-self contacts-input" placeholder="გაფილტრე სახელით">
            <div class="input-meta-left">
                <i class="material-symbols-outlined">manage_search</i>
            </div>
        </div>
        <button class="button button-icon" data-tooltip="ჯგუფის შექმნა" id="contactsAddButton">
            <i class="material-symbols-outlined">group_add</i>
        </button>
    </div>
    <div class="contacts-list">
        <h3>კონტაქტები</h3>
        <div class="contacts-group">
            {{#each contacts as |contact i|}}
            <div class="contacts-list-item list-hoverable {{#if contact.online}}contacts-list-item-active{{/if}}"
                data-conversation-id="{{contact.conversation_id}}" data-user-id="{{contact.user_id}}"
                data-user-name="{{contact.user_name}}">
                <i class="material-symbols-outlined contacts-list-item-media">account_circle</i>
                <span class="contacts-list-item-content">{{contact.full_name}}</span>
            </div>
            {{/each}}
        </div>
        <h3>ჯგუფები</h3>
        <div class="chat-group">
            {{#each groups as |group i|}}
            <div class="contacts-list-item list-hoverable {{#if group.online}}contacts-list-item-active{{/if}}"
                data-conversation-id="{{group.conversation_id}}" data-chat-name="{{group.title}}">
                <i class="material-symbols-outlined contacts-list-item-media">group</i>
                <span class="contacts-list-item-content">{{group.title}}</span>
            </div>
            {{/each}}
        </div>
    </div>
</div>